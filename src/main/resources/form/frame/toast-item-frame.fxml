<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>

<?import org.beuwi.msgbots.view.gui.control.Button?>
<?import org.beuwi.msgbots.view.gui.control.Label?>
<?import org.beuwi.msgbots.view.gui.layout.HBox?>
<?import org.beuwi.msgbots.view.gui.layout.StackPane?>
<?import org.beuwi.msgbots.view.gui.layout.VBox?>

<fx:root type="HBox" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
	<children>
		<StackPane alignment="TOP_CENTER">
			<children>
				<ImageView fx:id="imvIcon"
						   fitHeight="16.0"
						   fitWidth="16.0"
						   pickOnBounds="true">
					<StackPane.margin>
						<Insets top="10.0" right="10.0" left="5.0"></Insets>
					</StackPane.margin>
				</ImageView>
			</children>
		</StackPane>
		<VBox HBox.hgrow="ALWAYS">
			<children>
				<HBox styleClass="title-bar"
                      prefHeight="30.0">
					<children>
						<Label fx:id="lblTitle"
                               styleClass="title-label"
                               HBox.hgrow="ALWAYS"></Label>
						<Button fx:id="btnClose" prefWidth="30.0"></Button>
					</children>
				</HBox>
				<Label fx:id="lblText"
                       styleClass="text-label"
                       alignment="TOP_LEFT"
                       VBox.vgrow="ALWAYS"></Label>
				<!-- <HBox fx:id="hbxBar" styleClass="button-bar" alignment="CENTER_RIGHT" spacing="10.0" prefHeight="30">
					<children>
						<Button text="TEST BUTTON" styled="true" type="ACTION" ></Button>
					</children>
				</HBox> -->
			</children>
		</VBox>
	</children>
	<padding>
		<Insets top="5.0" right="5.0" bottom="5.0" left="5.0"></Insets>
	</padding>
</fx:root>