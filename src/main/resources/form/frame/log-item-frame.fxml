<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>

<?import org.beuwi.msgbots.platform.gui.control.Button?>
<?import org.beuwi.msgbots.platform.gui.control.Label?>
<?import org.beuwi.msgbots.platform.gui.layout.HBox?>
<?import org.beuwi.msgbots.platform.gui.layout.StackPane?>
<?import org.beuwi.msgbots.platform.gui.layout.VBox?>

<fx:root type="HBox" spacing="5" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
	<children>
		<StackPane alignment="CENTER">
			<children>
				<ImageView fx:id="imvIcon"
						   fitHeight="16.0"
						   fitWidth="16.0"
						   pickOnBounds="true">
				</ImageView>
			</children>
			<padding>
				<Insets left="2.5" right="5.0"></Insets>
			</padding>
		</StackPane>
		<Label fx:id="lblDate" styleClass="date-label"></Label>
		<!-- <Label fx:id="lblTitle" styleClass="title-label"></Label> -->
		<Label fx:id="lblText" styleClass="text-label" HBox.hgrow="ALWAYS"></Label>
	</children>
	<padding>
		<Insets top="5.0" right="5.0" bottom="5.0" left="5.0"></Insets>
	</padding>
</fx:root>